            android:padding="3dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
                android:padding="3dp"
                android:textColor="@color/black"
                android:id="@+id/id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone"/>

        <TextView
            android:padding="3dp"
            android:textColor="@color/black"
