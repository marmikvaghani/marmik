        <TextView
                android:padding="3dp"
                android:textColor="@color/black"
                android:id="@+id/rpendtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16dp" />

        <!--<TextView
            android:id="@+id/rpendComplaintLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16dp" />-->

            <TextView
                android:id="@+id/rpstartAndEndTimeDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text=""
