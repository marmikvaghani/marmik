            android:id="@+id/rpupadateTimeAt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16dp" />

        <TextView
            android:padding="3dp"
            android:textColor="@color/black"
            android:id="@+id/rprepeatComplaintNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16dp" />

        <TextView
            android:padding="3dp"
